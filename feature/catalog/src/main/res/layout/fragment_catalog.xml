<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/medium"
    tools:context="com.belkanoid.catalog.presentation.catalog.CatalogFragment">


    <ImageView
        android:id="@+id/catalog_img_sort"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/sort_by_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/catalog_spinner_sort"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/small"
        android:background="@null"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/catalog_img_sort"
        app:layout_constraintStart_toEndOf="@+id/catalog_img_sort"
        app:layout_constraintTop_toTopOf="@+id/catalog_img_sort" />


    <ImageView
        android:id="@+id/catalog_img_filter"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginEnd="@dimen/small"
        android:src="@drawable/filter_default"
        app:layout_constraintBottom_toBottomOf="@+id/catalog_img_sort"
        app:layout_constraintEnd_toStartOf="@+id/catalog_tv_filter"
        app:layout_constraintTop_toTopOf="@+id/catalog_spinner_sort" />

    <TextView
        android:id="@+id/catalog_tv_filter"
        style="@style/TextRegular14"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:text="Фильтры"
        app:layout_constraintBottom_toBottomOf="@+id/catalog_img_filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/catalog_img_filter" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catalog_rv_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="@+id/catalog_tv_filter"
        app:layout_constraintStart_toStartOf="@+id/catalog_img_sort"
        app:layout_constraintTop_toBottomOf="@+id/catalog_img_sort"
        tools:listitem="@layout/tag_list_item_chosen" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catalog_rv_products"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/medium"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/catalog_rv_tags"
        app:layout_constraintStart_toStartOf="@+id/catalog_rv_tags"
        app:layout_constraintTop_toBottomOf="@+id/catalog_rv_tags"
        app:spanCount="2"
        tools:listitem="@layout/product_list_item" />

    <ProgressBar
        android:id="@+id/catalog_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>