<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background_medium">

    <ImageView
        android:id="@+id/profileItem_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginVertical="@dimen/medium"
        android:layout_marginHorizontal="@dimen/medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/feedback_default" />

    <TextView
        android:id="@+id/profileItem_tv_tittle"
        style="@style/TextMedium16"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/extra_medium"
        app:layout_constraintBottom_toBottomOf="@+id/profileItem_img"
        app:layout_constraintEnd_toStartOf="@+id/profileItem_img_arrow_right"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toEndOf="@+id/profileItem_img"
        app:layout_constraintTop_toTopOf="@+id/profileItem_img"
        android:text="Обратная связь" />

    <ImageView
        android:id="@+id/profileItem_img_arrow_right"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="@dimen/medium"
        app:layout_constraintBottom_toBottomOf="@+id/profileItem_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileItem_img"
        app:srcCompat="@drawable/right_arrow_default" />
</androidx.constraintlayout.widget.ConstraintLayout>